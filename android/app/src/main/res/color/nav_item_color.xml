<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the item is checked (active) -->
    <item android:state_checked="true" android:color="#808080" /> <!-- Gray color -->
    <!-- State when the item is not checked (inactive) -->
    <item android:state_checked="false" android:color="#000000" /> <!-- Black color -->
</selector>